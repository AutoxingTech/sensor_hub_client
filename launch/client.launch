<launch>
    <arg name="output" default="screen" />

    <node name="sensor_hub_client_node" pkg="sensor_hub_client" type="sensor_hub_client" required="true" output="$(arg output)">
        <param name="host_ip" type="string" value="0.0.0.0"/>
        <param name="host_port" type="int" value="8091"/>
    </node>
</launch>